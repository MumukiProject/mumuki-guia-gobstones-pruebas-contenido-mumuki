/* Nos dice cuantas bolitas hay si no contamos el color recibido por par√°metro. */

function todasExcepto(color) { /*<elipsis-for-student@*/
    return (nroBolitasTotal() - nroBolitas(color))
/*@elipsis-for-student>*/ } 